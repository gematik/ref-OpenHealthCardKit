#!/bin/sh

# scripts/cibuild: Setup environment and run tests. This is primarily
#                 designed to run on the continuous integration server.

set -ev

cd "$(dirname "$0")/.."

echo "CI started atâ€¦"
date "+%H:%M:%S"

scripts/bootstrap
bundle exec fastlane cibuild

# Publish dry_run
bundle exec fastlane publish dry_run:true

echo "Done"
date "+%H:%M:%S"
